{erl_opts, [debug_info]}.

{deps,
 [
  erlcloud,
  jsx,
  %% change to `erllambda` once https://github.com/alertlogic/erllambda/pull/51 is merged
  {erllambda, {git, "git@github.com:velimir/erllambda.git", {branch, "default-config"}}}
 ]}.

%% Build a release from this project
{relx,
 [
  {release, { erllambda_sam_example, semver }, [erllambda_sam_example, erllambda]},

  {sys_config, "./config/sys.config"},
  {vm_args, "./config/vm.args"},

  {include_src, false},

  {extended_start_script, true}]
}.

{plugins,
 [
  covertool,
  rebar3_erllambda
 ]}.

{provider_hooks,
 [
  {post, [{release, {erllambda, release}}]}
 ]}.

%% Profiles
{profiles,
 [
  {test,
   [
    {erl_opts, [export_all, nowarn_export_all]},
    {deps, [meck]}
   ]},
  {prod,
   [
    {relx,
     [
      {include_erts, true}
     ]}
   ]},
  {local,
   [
    {relx,
     [
      {sys_config, "./config/local-sys.config"},
      {include_erts, true},
      {dev_mode, false}
     ]}
   ]}
 ]}.

